<strong>Editing Book</strong>

<%= form_with model: @book, url: update_book_path(@book.id), method: :patch do |f| %>

  <h4>title</h4>
  <%= f.text_field :title %>

  <h4>body</h4>
  <%= f.text_area :body %>

  <%= f.submit "Update Book" %>

<% end %>


<a href = "/edit">edit</a>
<a href = "/books">back</a>