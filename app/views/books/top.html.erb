<h1>Books</h1>

<table>

  <thead>

    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan = "3"></th>
    </tr>

  </thead>

  <tbody>

    <% @books.each do |book| %>
      <tr>
          <td class="book-body"><%= book.body %></td>
          <td><%= link_to book.title, book_path(book.id) %></td>
          <td>
            <%= link_to "show", show_book_path(@books) %>
            <%= link_to "edit", edit_book_path(@books) %>
          </td>
      </tr>
    <% end %>

  </tbody>

</table>




<h1>New Book</h1>
<%= form_with model: @book, url:"/books", method: :post do |f| %>
  <h4>title</h4>
  <%= f.text_field :title %>

  <h4>body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>
